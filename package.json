{
  "name": "trackswitch",
  "version": "1.0.0",
  "author": "Nils Werner (nils.werner@audiolabs-erlangen.de)",
  "description": "Multitrack Audio Player",
  "homepage": "https://github.com/audiolabs/trackswitch.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "esbuild css/trackswitch.css --bundle --minify --outfile=dist/css/trackswitch.min.css",
    "build:css:watch": "esbuild css/trackswitch.css --bundle --outfile=dist/css/trackswitch.min.css --watch=forever",
    "build:js": "node scripts/build-js.mjs",
    "build:js:watch": "esbuild src/index.ts --bundle --platform=browser --format=iife --global-name=TrackSwitch --target=es2017 --outfile=dist/js/trackswitch.js --watch=forever",
    "minify:js": "node scripts/build-js.mjs --minify-only",
    "clean": "rimraf dist",
    "dev": "npm run build && sh -c 'npm run dev:watch & npm run dev:serve & wait'",
    "dev:watch": "sh -c 'npm run build:css:watch & npm run build:js:watch & wait'",
    "dev:serve": "live-server --host=0.0.0.0 --port=8080 --watch=dist,examples,css,src",
    "prebuild": "npm run clean",
    "typecheck": "tsc --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/audiolabs/trackswitch.js.git"
  },
  "bugs": {
    "url": "https://github.com/audiolabs/trackswitch.js/issues"
  },
  "style": "dist/css/trackswitch.min.css",
  "main": "dist/js/trackswitch.js",
  "unpkg": "dist/js/trackswitch.min.js",
  "jsdelivr": "dist/js/trackswitch.min.js",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "font-awesome": "^4.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "jsdom": "^28.1.0",
    "live-server": "^1.2.2",
    "rimraf": "^6.0.0",
    "typescript": "^5.9.3"
  }
}
