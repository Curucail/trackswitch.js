{
  "name": "trackswitch",
  "version": "0.2.0",
  "author": "Nils Werner (nils.werner@audiolabs-erlangen.de)",
  "description": "Multitrack Audio Player",
  "homepage": "https://github.com/audiolabs/trackswitch.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "esbuild css/trackswitch.css --bundle --minify --outfile=dist/css/trackswitch.min.css",
    "build:js": "esbuild src/index.ts --bundle --platform=browser --format=iife --global-name=TrackSwitch --target=es2017 --outfile=dist/js/trackswitch.js && npm run minify:js",
    "build:test": "esbuild src/index.ts --bundle --platform=node --format=cjs --target=es2019 --outfile=dist/tmp/ts/trackswitch.js",
    "minify:js": "esbuild dist/js/trackswitch.js --minify --outfile=dist/js/trackswitch.min.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "typecheck": "tsc --project tsconfig.json",
    "test": "npm run build:test && node --test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/audiolabs/trackswitch.js.git"
  },
  "bugs": {
    "url": "https://github.com/audiolabs/trackswitch.js/issues"
  },
  "style": "dist/css/trackswitch.min.css",
  "main": "dist/js/trackswitch.js",
  "unpkg": "dist/js/trackswitch.min.js",
  "jsdelivr": "dist/js/trackswitch.min.js",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "font-awesome": "^4.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "jsdom": "^28.1.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.9.3"
  }
}
