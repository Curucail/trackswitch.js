{
  "name": "trackswitch",
  "version": "0.1.0",
  "author": "Nils Werner (nils.werner@audiolabs-erlangen.de)",
  "description": "Multitrack Audio Player",
  "homepage": "https://github.com/audiolabs/trackswitch.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass css/reset.sass dist/tmp/reset.css && npm run concat:css && npm run minify:css",
    "build:js": "npm run transpile:ts && esbuild src/index.ts --bundle --platform=browser --format=iife --global-name=TrackSwitch --target=es2017 --outfile=dist/js/trackswitch.js && npm run minify:js",
    "concat:css": "node build/concat-css.js",
    "concat:js": "node build/concat-js.js",
    "minify:css": "esbuild dist/tmp/concat.css --minify --outfile=dist/css/trackswitch.min.css",
    "minify:js": "esbuild dist/js/trackswitch.js --minify --outfile=dist/js/trackswitch.min.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "transpile:ts": "esbuild src/index.ts --bundle --platform=node --format=cjs --target=es2019 --outfile=dist/tmp/ts/trackswitch.js",
    "typecheck": "tsc --project tsconfig.json",
    "test": "npm run transpile:ts && node --test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/audiolabs/trackswitch.js.git"
  },
  "bugs": {
    "url": "https://github.com/audiolabs/trackswitch.js/issues"
  },
  "style": "dist/css/trackswitch.css",
  "main": "dist/js/trackswitch",
  "dependencies": {
    "font-awesome": "^4.2.0",
    "jquery": ">=3.7.0 <3.8.0"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.33",
    "esbuild": "^0.27.3",
    "jsdom": "^24.1.1",
    "rimraf": "^6.0.0",
    "sass": "^1.83.0",
    "typescript": "^5.9.3"
  }
}
